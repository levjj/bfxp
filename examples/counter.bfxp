{ bfxp-program }

byte counter;
byte input;

counter = 0; # initialize counter to zero

puti(counter);
input = getc();
input -= 48;  # treat input character as digit
while(input) { # while input is not the '0' digit
  input -= 2;
  counter += input; # add (input-2) to counter
  puti(counter); # print counter
  input = getc();
  input -= 48;
}
